{
  "terminal.integrated.profiles.linux": {
    "bash (zephyr)": {
      "path": "/bin/bash",
      "args": ["-l", "-i", "-c", "source ${workspaceFolder}/.venv/bin/activate; exec bash"]
    }
  },
  "terminal.integrated.defaultProfile.linux": "bash (zephyr)",
  "terminal.integrated.profiles.windows": {
    "PowerShell (zephyr)": {
      "path": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
      "args": ["-NoLogo", "-NoProfile", "-Command", ". ${workspaceFolder}\\.venv\\Scripts\\Activate.ps1; powershell -NoExit -Command Clear-Host"]
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell (zephyr)",
  "C_Cpp.default.compileCommands": [
    "${workspaceFolder}/zephyr/build/compile_commands.json"
  ]
}